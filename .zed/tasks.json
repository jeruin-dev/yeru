[
  {
    "label": "Configure (Debug)",
    "command": "cmake",
    "args": [
      "-B",
      "build",
      "-G",
      "Ninja",
      "-DCMAKE_BUILD_TYPE=Debug",
      "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Configure (Release)",
    "command": "cmake",
    "args": [
      "-B",
      "build",
      "-DCMAKE_BUILD_TYPE=Release",
      "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
    ],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Build Debug",
    "command": "cmake",
    "args": ["--build", "build", "--config", "Debug"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Build Release",
    "command": "cmake",
    "args": ["--build", "build", "--config", "Release"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Clean",
    "command": "cmake",
    "args": ["--build", "build", "--target", "clean"],
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Run App",
    "command": "./build/app",
    "cwd": "$ZED_WORKTREE_ROOT"
  },
  {
    "label": "Build and Run",
    "command": "cmake",
    "args": ["--build", "build", "&&", "./build/app"],
    "cwd": "$ZED_WORKTREE_ROOT"
  }
]
